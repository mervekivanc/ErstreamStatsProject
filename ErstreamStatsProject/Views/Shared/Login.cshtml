
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="Erstream Stats" name="description" />
    <meta content="" name="author" />
    <link rel="shortcut icon" href="~/Content/img/small-icon-logo.png">
    @Styles.Render("~/Content/metronic/css", "~/Content/layout/css")
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link href="~/Content/metronic_v4.7.5/assets/pages/css/login-4.min.css" rel="stylesheet" />

</head>
<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="~/Content/img/logo.png" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" action="index.html" method="post">
            <h3 class="form-title">Login to your account</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> Enter any username and password. </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" />
                </div>
            </div>
            <div class="form-actions">
                <label class="rememberme mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="remember" value="1" /> Remember me
                    <span></span>
                </label>
                <button class="btn green pull-right" onclick="login()"> Login </button>
            </div>
        </form>
        <!-- END LOGIN FORM -->

    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        Copyright @@ @DateTime.Now.Year Erstream - Statistics Panel
    </div>

    <script src="~/Content/metronic_v4.7.5/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/KeysSpecification.js"></script>
    <script type="text/javascript">
        $.cookie("ptc", null, { expires: -1 });
        $.cookie("accountPtc", null, { expires: -1 });
        $.cookie("AdditionalFilters", null, { expires: -1 });
        $.cookie("AccountCheck", null, { expires: -1 });

        function login() {
            var username = $("input[name='username']").val();
            if (username != null) {
                $.cookie('user', username);

                var k = KeySpec(username);
                $.cookie("accountPtc", k);
                console.log($.cookie("accountPtc"));
                window.location.href = "/Home/Index";
            }
        }
    </script>
    <script src="~/Content/metronic_v4.7.5/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic_v4.7.5/assets/global/plugins/js.cookie.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic_v4.7.5/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic_v4.7.5/assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic_v4.7.5/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic_v4.7.5/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic_v4.7.5/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic_v4.7.5/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic_v4.7.5/assets/global/plugins/backstretch/jquery.backstretch.min.js" type="text/javascript"></script>
    <script src="~/Content/metronic_v4.7.5/assets/global/scripts/app.min.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#clickmewow').click(function () {
                $('#radio1003').attr('checked', 'checked');
            });
        })
    </script>
    <script src="~/Content/metronic_v4.7.5/assets/pages/scripts/login-4.min.js"></script>
</body>

</html>
